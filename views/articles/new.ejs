<%include ../partials/header %>

<div class="container">
	<h1 style="text-align: center;">Create a new article</h1>
	<div>
		<form action="/articles" method="POST">
			<div class="form-group">
				<label>Title</label>
				<input type="text" class="form-control" placeholder="title" name = "article[title]">
			</div>
			<div class="form-group">
				<label>Full Name</label>
				<input type="text" class="form-control" placeholder="name" name = "article[author][full_name]">
			</div>
			<div class="form-group">
				<label>Image</label>
				<input type="text" class="form-control" placeholder="img url" name="article[image]">
			</div>
			<div class="form-group">
				<label>Article Content</label>
				<textarea type="text" class="form-control" placeholder="post content" name="article[post]" rows=8></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-danger btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/articles">Go Back</a>
	</div>
</div>

<%include ../partials/footer %>
