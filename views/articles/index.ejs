<% include ../partials/header %>

<div class = "container mt-4">

	<div class="jumbotron" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.7) 0%,rgba(255,255,255,0.7) 100%), url(https://thumbs.dreamstime.com/b/bulb-164354798.jpg)">
		<div class="container" >
			<h1 class="font-weight-bold text-center">Welcome to The Debate</h1>
			<h5 class="font-weight-bold text-center">View our articles and join the conversation!</h5>
		</div>
	</div>

	<div class="d-flex">
		<form class="form-inline mb-3 mr-auto" action="/articles/search" method="POST">
			<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name='search'>
			<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
		</form>
		<a href="/articles/new" class = "btn btn-danger mb-3">Add New Article</a>
	</div>

	<div class="row" id="gridRow">
		<% articles.forEach(function(article) { %>
			<div class="col-md-3 col-sm-6 mb-3">
				<a href="/articles/<%= article._id %>" id='cardLink'>
				<div class="card shadow-sm cardHover" style="height: 420px;">
					<img class="card-img-top" style="height: 175px;" src="<%= article.image%>"></img>
					<div class="card-body">
						<div class="card-title h5">
							<strong><%= article.title %></strong> by <%= article.author.full_name %>
						</div>
						<p class='card-text line-clamp'><%=article.post %></p>
					</div>
				</div>
				</a>
			</div>
		<% }); %>

		</div>
	</div>
</div>

<% include ../partials/footer %>
