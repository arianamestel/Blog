<%include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create New Comment To <strong><%= article.title %></strong></h1>
		<div>
			<form action="/articles/<%=article._id%>/comments" method="POST">
            <div class="form-group">
					<label>Text</label>
					<input type="text" class="form-control" placeholder="text" name = "comments[text]">
				</div>
            <div class="form-group">
               <button class="btn btn-lg btn-danger btn-primary btn-block">Submit</button>
            </div>
			</form>
			<a href="/articles/<%= article._id %>">Go Back</a>
		</div>
	</div>
</div>

<%include ../partials/footer %>
