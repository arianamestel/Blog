<%include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div>
			<form action="/articles/<%=article_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
					<label>Text</label>
					<input type="text" class="form-control" name = "comments[text]" value="<%=comment.text%>">
				</div>
            <div class="form-group">
               <button class="btn btn-lg btn-danger btn-primary btn-block">Submit</button>
            </div>
			</form>
			<a href="/articles/<%= article_id %>">Go Back</a>
		</div>
	</div>
</div>

<%include ../partials/footer %>
